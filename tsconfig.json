{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "target": "es2021",
    "baseUrl": ".",
    "lib": ["es2021", "dom"],
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false
  }
}
